<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/client_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.cookietech.namibia.adme.ui.client.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/home_to_search_service"
            app:destination="@id/searchServicesFragment" />
        <action
            android:id="@+id/home_to_marker_details"
            app:destination="@id/markerClickDetailsDialog2" />
    </fragment>
    <fragment
        android:id="@+id/serviceHistoryFragment"
        android:name="com.cookietech.namibia.adme.ui.client.serviceHistory.ServiceHistoryFragment"
        android:label="fragment_service_history"
        tools:layout="@layout/fragment_service_history" />
    <fragment
        android:id="@+id/myDealsFragment"
        android:name="com.cookietech.namibia.adme.ui.client.myDeals.MyDealsFragment"
        android:label="fragment_my_deals"
        tools:layout="@layout/fragment_my_deals" />
    <fragment
        android:id="@+id/client_profileFragment"
        android:name="com.cookietech.namibia.adme.ui.common.profile.ProfileFragment"
        android:label="ProfileFragment" />
    <fragment
        android:id="@+id/searchServicesFragment"
        android:name="com.cookietech.namibia.adme.ui.client.home.search.SearchServicesFragment"
        android:label="SearchServicesFragment" />
    <dialog
        android:id="@+id/markerClickDetailsDialog2"
        android:name="com.cookietech.namibia.adme.ui.client.home.MarkerClickDetailsDialog"
        android:label="MarkerClickDetailsDialog" >
        <action
            android:id="@+id/marker_dialog_to_sp_activity"
            app:destination="@id/serviceProviderDetailsActivity" />
    </dialog>
    <activity
        android:id="@+id/serviceProviderDetailsActivity"
        android:name="com.cookietech.namibia.adme.ui.client.home.ServiceProviderDetailsActivity"
        android:label="activity_service_provider_details"
        tools:layout="@layout/activity_service_provider_details" />
</navigation>