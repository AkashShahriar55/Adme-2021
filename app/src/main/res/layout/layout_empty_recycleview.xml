<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/empty_recyclerview"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/border_ash_today"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/tv_empty_recycleview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You haven't added any service yet"
        android:textColor="@color/txt_highlight"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_empty_recycleview_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_empty_recycleview_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Add a service"
        android:textColor="@color/color_active"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_empty_recycleview_title" />
</androidx.constraintlayout.widget.ConstraintLayout>