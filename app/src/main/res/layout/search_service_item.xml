<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/root_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/tv_service_provider_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Bishal Imtiaz"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/iv_profile_pic"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <RatingBar
            android:id="@+id/service_rating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:theme="@style/RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:rating="4.5"
            app:layout_constraintBottom_toBottomOf="@+id/tv_service_provider_name"
            app:layout_constraintStart_toEndOf="@+id/tv_service_provider_name"
            app:layout_constraintTop_toTopOf="@+id/tv_service_provider_name">

        </RatingBar>

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="4.5"
            android:textColor="@color/material_green"
            app:layout_constraintBottom_toBottomOf="@+id/service_rating"
            app:layout_constraintStart_toEndOf="@+id/service_rating"
            app:layout_constraintTop_toTopOf="@+id/service_rating">

        </TextView>

        <TextView
            android:id="@+id/tv_service_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="Painting"
            android:textColor="@color/quantum_grey"
            app:layout_constraintStart_toEndOf="@+id/iv_profile_pic"
            app:layout_constraintTop_toBottomOf="@+id/tv_service_provider_name">

        </TextView>

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="1 Mile Away"
            android:textColor="@color/quantum_grey"
            app:layout_constraintBottom_toBottomOf="@+id/tv_service_category"
            app:layout_constraintStart_toEndOf="@+id/tv_service_category"
            app:layout_constraintTop_toTopOf="@+id/tv_service_category">

        </TextView>

        <TextView
            android:id="@+id/service_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="I do home paint jobs, Wall painting, Plastic painting, Artistic paints, Pattern paintings"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_profile_pic"
            app:layout_constraintTop_toBottomOf="@+id/tv_service_category">

        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>